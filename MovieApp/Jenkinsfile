pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/BorraTriveni123/POC.git'
                
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t movie-api .'
            }
        }

        stage('Deploy to EC2') {
            steps {
                sshagent(['ec2-ssh-key']) {
                    sh '''
                    ssh ubuntu@15.134.218.173 "
                      cd ~/POC/MovieApp
                      docker build -t movie-api .
                      docker stop movie || true
                      docker rm movie || true
                      docker run -d -p 5000:5000 --movie movie-api
                      exit
                    "
                    '''
                }
            }
        }
    }
}





