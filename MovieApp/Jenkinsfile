pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/<BorraTriveni123>/POC.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t movie-app .'
            }
        }

        stage('Deploy to EC2') {
            steps {
                sshagent(['ec2-ssh-key']) {
                    sh '''
                    ssh ubuntu@15.134.218.173 "
                      docker stop movie || true
                      docker rm movie || true
                      docker run -d -p 5000:5000 --name movie movie-app
                    "
                    '''
                }
            }
        }
    }
}
